<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/category_image_view"
        android:layout_width="@dimen/app_image_view_size"
        android:layout_height="@dimen/app_image_view_size"
        android:layout_margin="@dimen/app_margin_16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_auto" />

    <TextView
        style="@style/TextStyle.Small"
        android:layout_width="@dimen/transaction_category_title_width"
        android:id="@+id/category_text_view"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/category_image_view"
        tools:text="Автомобили" />

</android.support.constraint.ConstraintLayout>